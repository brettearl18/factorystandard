rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is staff/admin/factory
    function isStaff() {
      return request.auth != null &&
        (request.auth.token.role == "staff" || request.auth.token.role == "admin" || request.auth.token.role == "factory");
    }

    // Helper function to check if user is client
    function isClient() {
      return request.auth != null &&
        request.auth.token.role == "client";
    }

    // Special match for temp color inspiration images (must come before general guitars match)
    // Path: guitars/temp/color-inspiration/{filename}
    match /guitars/temp/color-inspiration/{filename} {
      // Allow read for authenticated clients
      allow read: if request.auth != null && 
                   (request.auth.token.role == "client" || 
                    request.auth.token.role == "staff" || 
                    request.auth.token.role == "admin");
      
      // Allow write for authenticated clients with file validation
      allow write: if request.auth != null && 
                    (request.auth.token.role == "client" || 
                     request.auth.token.role == "staff" || 
                     request.auth.token.role == "admin") &&
                    request.resource.size < 10 * 1024 * 1024 && // 10MB max per image
                    request.resource.contentType.matches('image/.*');
    }

    // Client gallery images - clients can upload to their own guitar's gallery
    // Path: guitars/{guitarId}/gallery/{filename}
    match /guitars/{guitarId}/gallery/{filename} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write for clients (to their own guitars) and staff/admin
      allow write: if request.auth != null && 
                    (request.auth.token.role == "staff" || 
                     request.auth.token.role == "admin" ||
                     (request.auth.token.role == "client" && 
                      // Note: We can't verify guitar ownership in storage rules,
                      // but Firestore rules will prevent unauthorized updates
                      request.resource.size < 10 * 1024 * 1024 && // 10MB max per image
                      request.resource.contentType.matches('image/.*')));
    }

    // Guitar photos and reference images
    // Note: gallery/ and temp/ paths are handled by specific matches above
    match /guitars/{guitarId}/{allPaths=**} {
      // Staff/admin/factory can read and write all guitar files
      allow read, write: if isStaff();
      
      // Clients can read files for their own guitars (but not temp/gallery paths - handled above)
      // Security: Client access is controlled at the application level
      // The app only shows guitars that belong to the client, so they can only access
      // photos for guitars they can see. This is acceptable because:
      // 1. Storage paths are not easily guessable (guitarId is required)
      // 2. Firestore rules prevent clients from reading other clients' guitar documents
      // 3. The app UI only displays guitars owned by the client
      // For stronger security, consider adding custom metadata to storage objects
      allow read: if isClient() && request.auth != null && guitarId != "temp";
      
      // Only allow image file types for staff writes (non-temp/gallery paths)
      allow write: if isStaff() && 
                     guitarId != "temp" &&
                     !allPaths.matches("gallery/.*") && // Exclude gallery path
                     request.resource.size < 10 * 1024 * 1024 && // 10MB max
                     request.resource.contentType.matches('image/.*');
    }

    // Invoice uploads and payment receipts
    match /invoices/{clientUid}/{allPaths=**} {
      // Clients can upload payment receipts for their own invoices
      allow write: if isClient() && request.auth.uid == clientUid &&
                     request.resource.size < 10 * 1024 * 1024 && // 10MB max
                     request.resource.contentType.matches('image/.*');
      // Clients can read their own invoice files
      allow read: if isClient() && request.auth.uid == clientUid;
      // Staff/admin can read and write all invoice files
      allow read, write: if isStaff();
      allow read: if isStaff() || (isClient() && request.auth.uid == clientUid);
      allow write: if isStaff() &&
        request.resource.size < 20 * 1024 * 1024 &&
        (request.resource.contentType.matches('application/(pdf|octet-stream)') ||
         request.resource.contentType.matches('image/.*'));
    }

    // Run thumbnails and update images
    match /runs/{runId}/{allPaths=**} {
      // Staff/admin/factory can read and write all run files
      allow read, write: if isStaff();
      
      // Clients can read run thumbnails and update images if they have guitars in that run
      // Note: This is a simplified check - clients can read if authenticated
      // More restrictive: would need to check if client has guitars in the run
      allow read: if isClient() && request.auth != null;
      
      // Only allow image file types
      // Update images can be larger (up to 10MB per file, but we check total size in the app)
      allow write: if isStaff() && 
                     request.resource.size < 10 * 1024 * 1024 && // 10MB max per file
                     request.resource.contentType.matches('image/.*');
    }

    // Branding assets (logos, favicons, background images)
    match /branding/{assetType}/{allPaths=**} {
      // Everyone can read branding assets (for public display)
      allow read: if request.auth != null;
      
      // Only staff/admin can upload branding assets
      // Background images can be larger (10MB), other assets limited to 5MB
      allow write: if isStaff() && 
                     request.resource.size < (assetType == "background" ? 10 * 1024 * 1024 : 5 * 1024 * 1024) &&
                     (request.resource.contentType.matches('image/.*') ||
                      request.resource.contentType.matches('image/x-icon') ||
                      request.resource.contentType == 'image/svg+xml');
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

