rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is staff/admin/factory
    function isStaff() {
      return request.auth != null &&
        (request.auth.token.role == "staff" || request.auth.token.role == "admin" || request.auth.token.role == "factory");
    }

    // Helper function to check if user is client
    function isClient() {
      return request.auth != null &&
        request.auth.token.role == "client";
    }

    // Guitar photos and reference images
    match /guitars/{guitarId}/{allPaths=**} {
      // Staff/admin can read and write all guitar files
      allow read, write: if isStaff();
      
      // Clients can read files for guitars assigned to them
      // Note: This requires checking Firestore to verify clientUid
      // For now, we'll allow read access if authenticated as client
      // You may want to restrict this further based on your needs
      allow read: if isClient() && request.auth != null;
      
      // Only allow image file types
      allow write: if isStaff() && 
                     request.resource.size < 10 * 1024 * 1024 && // 10MB max
                     request.resource.contentType.matches('image/.*');
    }

    // Invoice uploads
    match /invoices/{clientUid}/{allPaths=**} {
      allow read: if isStaff() || (isClient() && request.auth.uid == clientUid);
      allow write: if isStaff() &&
        request.resource.size < 20 * 1024 * 1024 &&
        (request.resource.contentType.matches('application/(pdf|octet-stream)') ||
         request.resource.contentType.matches('image/.*'));
    }

    // Run thumbnails
    match /runs/{runId}/{allPaths=**} {
      // Staff/admin can read and write all run files
      allow read, write: if isStaff();
      
      // Clients can read run thumbnails (for viewing runs they're part of)
      allow read: if isClient() && request.auth != null;
      
      // Only allow image file types
      allow write: if isStaff() && 
                     request.resource.size < 10 * 1024 * 1024 && // 10MB max
                     request.resource.contentType.matches('image/.*');
    }

    // Branding assets (logos, favicons)
    match /branding/{assetType}/{allPaths=**} {
      // Everyone can read branding assets (for public display)
      allow read: if request.auth != null;
      
      // Only staff/admin can upload branding assets
      allow write: if isStaff() && 
                     request.resource.size < 5 * 1024 * 1024 && // 5MB max
                     (request.resource.contentType.matches('image/.*') ||
                      request.resource.contentType.matches('image/x-icon') ||
                      request.resource.contentType == 'image/svg+xml');
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

